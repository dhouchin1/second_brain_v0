{
  "manifest_version": 3,
  "name": "Second Brain",
  "version": "1.0.0",
  "description": "Capture web content to your Second Brain with AI processing",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8084/*",
    "https://*.secondbrain.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Second Brain Capture"
  },
  "icons": {
    "16": "icons/brain-16.png",
    "32": "icons/brain-32.png",
    "48": "icons/brain-48.png",
    "128": "icons/brain-128.png"
  },
  "options_page": "options.html"
}